<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mac"
    android:padding="8dp"
    android:orientation="vertical"
    tools:context=".ui.UserNameActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mac2"
        android:layout_centerHorizontal="true"
        android:text="@string/lets_begin"
        android:fontFamily="@font/black_ops_one"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:textSize="24sp"></TextView>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/your_name"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:textColorHint="@color/mac2"
        android:textColor="@color/mac2"
        android:fontFamily="@font/black_ops_one"></EditText>

<Button
    android:id="@+id/button_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/save"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="16dp"
    android:layout_centerHorizontal="true"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:backgroundTint="@color/mac2"
    android:fontFamily="@font/black_ops_one"
    android:textColor="@color/mac"></Button>


</RelativeLayout>